<% layout('layouts/boilerplate') %>

<h1 class="text-center">Login</h1>
<div class="container d-flex justify-content-center align-items-center mt-3 mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img class="card-img-top img-fluid" src="https://images.unsplash.com/photo-1623567341691-1f47b5cf949e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1752&q=80" alt="">
                <div class="card-body">
                    <form action="/login" class="validated-form" method="POST" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="name">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Login</button>
                        </div>
                    </form>
                        <!-- <div class="mt-3 text-center">
                            <p>Don't have an account? <a href="/register"> <button class="btn btn-sm btn-danger">Register</button></a></p>
                        </div> -->
                    
                </div>
            </div>
        </div>
        </div>
    </div>
</div>