<% layout('layouts/boilerplate') %> 

    <div class="">
        <h1 class="bg-primary text-white text-center p-2 border border-5 border-white rounded-pill">LEADERBOARD</h1> 
    </div>
    <div class="d-flex justify-content-end">
        <a href="/scores/new"><button class="btn btn btn-danger"> <b> NEW ROUND </b> </button></a>
    </div>

    <h4 class=""><b>STROKES</b></h4>

    <div class="">
        <table class="table table-hover table-bordered table-sm align-middle table-striped border-5">
            <thead  class="table-dark">
                <tr class="text-center">
                    <th scope="col">HOLE</th>

                    <% for (let i = 1; i <= 18; i++) { %> 
                    <th scope="col"><%= i %> </th>
                    <% } %> 

                    <th scope="col">TOT</th>
                    <th scope="col">HCP</th>
                    <th scope="col">NET</th> 
                </tr>
            </thead>
            <thead  class="table-warning">
                <tr class="text-center fw-bold">
                    <th scope="col">PAR</th>
                    <td>4</td>
                    <td>5</td>
                    <td>4</td>
                    <td>3</td>
                    <td>4</td>
                    <td>5</td>
                    <td>3</td>
                    <td>4</td>
                    <td>4</td>
                    <td>5</td>
                    <td>4</td>
                    <td>4</td>
                    <td>3</td>
                    <td>4</td>
                    <td>4</td>
                    <td>3</td>
                    <td>5</td>
                    <td>4</td>
                    <td>72</td>
                    <td></td>
                    <td></td>
                </thead>

            <% for (let score of scores) { %> 
                <tr class="text-center">
                    <th scope="row"><a class="text-decoration-none"href="/scores/<%=score._id%>"><%= score.name %></a></th>
                    <td><%=score.hole1.strokes %></td>
                    <td><%=score.hole2.strokes %></td>
                    <td><%=score.hole3.strokes %></td>
                    <td><%=score.hole4.strokes %></td>
                    <td><%=score.hole5.strokes %></td>
                    <td><%=score.hole6.strokes %></td>
                    <td><%=score.hole7.strokes %></td>
                    <td><%=score.hole8.strokes %></td>
                    <td><%=score.hole9.strokes %></td>
                    <td><%=score.hole10.strokes %></td>
                    <td><%=score.hole11.strokes %></td>
                    <td><%=score.hole12.strokes %></td>
                    <td><%=score.hole13.strokes %></td>
                    <td><%=score.hole14.strokes %></td>
                    <td><%=score.hole15.strokes %></td>
                    <td><%=score.hole16.strokes %></td>
                    <td><%=score.hole17.strokes %></td>
                    <td><%=score.hole18.strokes %></td> 
                    <td><%= score.hole1.strokes + score.hole2.strokes + score.hole3.strokes + score.hole4.strokes + score.hole5.strokes + score.hole6.strokes + score.hole7.strokes + score.hole8.strokes + score.hole9.strokes + score.hole10.strokes + score.hole11.strokes + score.hole12.strokes + score.hole13.strokes + score.hole14.strokes + score.hole15.strokes + score.hole16.strokes + score.hole17.strokes + score.hole18.strokes %> </td>
                    <td class="table-danger"><%= score.handicap %></td>
                    <td class="table-success"><%= (score.hole1.strokes + score.hole2.strokes + score.hole3.strokes + score.hole4.strokes + score.hole5.strokes + score.hole6.strokes + score.hole7.strokes + score.hole8.strokes + score.hole9.strokes + score.hole10.strokes + score.hole11.strokes + score.hole12.strokes + score.hole13.strokes + score.hole14.strokes + score.hole15.strokes + score.hole16.strokes + score.hole17.strokes + score.hole18.strokes) - score.handicap %> </td>
                </tr>
            <% } %> 
        </table>
    </div>
    
    
    <h4> <b>PUTTS</b></h4>

    <div class="">
        <table class="table table-hover table-bordered table-sm align-middle table-striped table-responsive">
            <caption>Select your name to input scores</caption>
            <thead class="table-dark">
                <tr class="text-center">
                    <th scope="col">HOLE</th>

                    <% for (let i = 1; i <= 18; i++) { %> 
                    <th scope="col"><%= i %> </th>
                    <% } %> 

                    <th scope="col">TOT</th>
                </tr>
            </thead>
            <% for (let score of scores) { %> 
                <tr class="text-center">
                    <th scope="row"><a class="text-decoration-none" href="/scores/<%=score._id%>"><%= score.name %></a></th> 
                    <td><%=score.hole1.putts %></td>
                    <td><%=score.hole2.putts %></td>
                    <td><%=score.hole3.putts %></td>
                    <td><%=score.hole4.putts %></td>
                    <td><%=score.hole5.putts %></td>
                    <td><%=score.hole6.putts %></td>
                    <td><%=score.hole7.putts %></td>
                    <td><%=score.hole8.putts %></td>
                    <td><%=score.hole9.putts %></td>
                    <td><%=score.hole10.putts %></td>
                    <td><%=score.hole11.putts %></td>
                    <td><%=score.hole12.putts %></td>
                    <td><%=score.hole13.putts %></td>
                    <td><%=score.hole14.putts %></td>
                    <td><%=score.hole15.putts %></td>
                    <td><%=score.hole16.putts %></td>
                    <td><%=score.hole17.putts %></td>
                    <td><%=score.hole18.putts %></td> 
                    <td><%= score.hole1.putts + score.hole2.putts + score.hole3.putts + score.hole4.putts + score.hole5.putts + score.hole6.putts + score.hole7.putts + score.hole8.putts + score.hole9.putts + score.hole10.putts + score.hole11.putts + score.hole12.putts + score.hole13.putts + score.hole14.putts + score.hole15.putts + score.hole16.putts + score.hole17.putts + score.hole18.putts %></td>
                </tr>
            <% } %> 
        </table>
    </div>

